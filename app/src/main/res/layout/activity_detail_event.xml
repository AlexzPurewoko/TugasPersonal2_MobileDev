<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        tools:context=".DetailEventActivity">

        <ImageView
            android:id="@+id/detail_media_cover"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="6dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_description"
            app:srcCompat="@drawable/example_media_cover" />

        <ImageView
            android:id="@+id/detail_image_poster"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:contentDescription="Image Poster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/example_image_poster" />

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            tools:text="DevCoach 151 : Front End | Hidup Lebih Simpel dengan Axios"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/detail_image_poster"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/detail_event_category"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toEndOf="@+id/detail_image_poster"
            app:layout_constraintTop_toBottomOf="@+id/detail_title"
            tools:text="Category: Seminar" />

        <TextView
            android:id="@+id/detail_event_owner"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toEndOf="@+id/detail_image_poster"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_category"
            tools:text="Owner: Dicoding Event" />

        <TextView
            android:id="@+id/detail_event_city"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toEndOf="@+id/detail_image_poster"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_owner"
            tools:text="Placement: Online" />

        <TextView
            android:id="@+id/detail_event_quota"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toEndOf="@+id/detail_image_poster"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_city"
            tools:text="Quota: 2000" />

        <TextView
            android:id="@+id/detail_current_registrants"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            tools:text="Current Registrants: 478"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_image_poster" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Full Description"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_current_registrants" />

        <TextView
            android:id="@+id/detail_event_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            tools:text="Ini adalah deskripsi...."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <Button
            android:id="@+id/detail_open_browser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="20dp"
            android:text="Open Link"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_media_cover" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>